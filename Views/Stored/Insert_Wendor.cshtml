@model CrudApplication.Models.Stored_Proc.Wendor
@{
    ViewData["Title"] = "Insert_Wendor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-info text-center">Add/Delete Wendor</h1>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly"></div>
                    <form method="post" asp-action="SaveOrUpdate">
                        <div class="form-group">
                            <label class="label" asp-for="Name"></label>
                            <input type="text" class="form-control" placeholder="Enter name" asp-for="Name" />
                            <input type="hidden" asp-for="Id" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Gender"></label></br>
                            <input type="radio" asp-for="Gender" value="Male" /> Male
                            <input type="radio" asp-for="Gender" value="Female" /> Female
                            <input type="radio" asp-for="Gender" value="Other" /> Other
                        </div>
                        <div class="form-group">
                            <label asp-for="City"></label>
                            <input type="text" asp-for="City" class="form-control" placeholder="Enter city" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PinCode"></label>
                            <input type="text" asp-for="PinCode" class="form-control" placeholder="Enter pincode" />
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-sm btn-primary float-right"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
